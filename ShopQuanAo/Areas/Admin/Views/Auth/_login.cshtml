<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link href="~/public/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/public/css/style.css" rel="stylesheet" />

</head>
<body class="bg-login-admin">
    <section class="pt-5">
        <div class="container pt-5 ">
            <div class="row justify-content-center">
                <div class="col-md-6  bg-white p-5">
                    <h3 class="text-center font-weight-bold text-cam">Đăng Nhập</h3>
                    <form action="" method="post" name="from_login">
                        <label for="psw"><b class="text-secondary ">Tên Đăng Nhập</b></label>
                        <input type="text" placeholder="Username" value="admin" name="username" required>
                        <label for="psw"><b class="text-secondary">Mật Khẩu</b></label>
                        <input type="password" placeholder="Password" value="123456" name="password" required>
                        <button class=" bg-cam btn-button  w-100">Đăng Nhập</button>
                        <span class="text-cam">@ViewBag.error</span>
                    </form>
                </div>
            </div>
        </div>
    </section>
</html>
</body>
</html>