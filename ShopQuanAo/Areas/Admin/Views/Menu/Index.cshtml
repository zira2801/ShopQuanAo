@model IEnumerable<ShopQuanAo.Models.Mmenu>
@{
    /**/

    ViewBag.Title = "Menu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_topMenu.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_leftMenu.cshtml")
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row m-0">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Quản Lý Menu</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Quản Lý Menu</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <section class="container-fluid ">
        <div>

            <div class="row">
                <div class="col-md-9  w-100 ">
                    @Html.Partial("_MessgeAlert")
                </div>
                <div class="col-md-4 pt-3">
                    @using (Html.BeginForm("index", "menu", FormMethod.Post))
                    {
                        <div id="accordion">

                            <div class="card">

                                <div class="card-header" id="headingCategory">
                                    <select name="position" required>
                                        <option value="">- Chọn Loại-</option>
                                        <option value="mainmenu">Mainmenu</option>
                                    </select>
                                </div>
                                <div class="card-header" id="headingCategory">
                                    <h5 class="mb-0 ">
                                        <a class=" py-2 btn-button-cart w-100 " data-toggle="collapse" data-target="#collapseCategory" aria-expanded="true" aria-controls="collapseCategory">
                                            Loại Sản Phẩm <i class="fas fa-chevron-down float-right"></i>
                                        </a>
                                    </h5>
                                </div>
                                <div id="collapseCategory" class="collapse" aria-labelledby="headingCategory" data-parent="#accordion">
                                    <div class="card-body">

                                        @foreach (var item in ViewBag.listCate)
                                        {
                                            <fieldset class="form-group">
                                                <div class="form-check">
                                                    <input class="form-check-input" name="itemCat" type="checkbox" value="@item.ID" id="@item.ID">
                                                    <label class="form-check-label" for="itemcategory_@item.ID>">
                                                        @item.name
                                                    </label>
                                                </div>
                                            </fieldset>
                                        }
                                        <fieldset class="form-group">
                                            <input class="btn-button-cart bg-cam p-2 w-25 float-right" type="submit" name="THEMCATE" value="Thêm">
                                        </fieldset>

                                    </div>

                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header" id="headingCategory">
                                    <h5 class="mb-0">
                                        <a class=" py-2 btn-button-cart w-100 text-center" data-toggle="collapse" data-target="#collapse123132" aria-expanded="true" aria-controls="collapseCategory">
                                            Loại Bài viết <i class="fas fa-chevron-down float-right"></i>
                                        </a>
                                    </h5>
                                </div>
                                <div id="collapse123132" class="collapse" aria-labelledby="headingCategory" data-parent="#accordion">
                                    <div class="card-body">

                                        @foreach (var item in ViewBag.listTopic)
                                        {
                                            <fieldset class="form-group">
                                                <div class="form-check">
                                                    <input class="form-check-input" name="itemtopic" type="checkbox" value="@item.ID" id="1">
                                                    <label class="form-check-label" for="itemcategory_@item.ID>">
                                                        @item.name
                                                    </label>
                                                </div>
                                            </fieldset>
                                        }
                                        <fieldset class="form-group">
                                            <input class="btn-button-cart bg-cam p-2 w-25 float-right" type="submit" name="THEMTOPIC" value="Thêm">
                                        </fieldset>

                                    </div>

                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header" id="headingCategory">
                                    <h5 class="mb-0">
                                        <a class=" py-2 btn-button-cart w-100 text-center" data-toggle="collapse" data-target="#collapsepage" aria-expanded="true" aria-controls="collapseCategory">
                                            Trang Đơn <i class="fas fa-chevron-down float-right"></i>
                                        </a>
                                    </h5>
                                </div>
                                <div id="collapsepage" class="collapse" aria-labelledby="headingCategory" data-parent="#accordion">
                                    <div class="card-body">

                                        @foreach (var item in ViewBag.listPage)
                                        {
                                            <fieldset class="form-group">
                                                <div class="form-check">
                                                    <input class="form-check-input" name="itempage" type="checkbox" value="@item.ID" id="1">
                                                    <label class="form-check-label" for="itemcategory_@item.ID>">
                                                        @item.title
                                                    </label>
                                                </div>
                                            </fieldset>
                                        }
                                        <fieldset class="form-group">
                                            <input class="btn-button-cart bg-cam p-2 w-25 float-right" type="submit" name="ADDPAGE" value="Thêm">
                                        </fieldset>

                                    </div>

                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header" id="headingCategory">
                                    <h5 class="mb-0">
                                        <a class=" py-2 btn-button-cart w-100 text-center" data-toggle="collapse" data-target="#collapse11" aria-expanded="true" aria-controls="collapseCategory">
                                            Tùy biến liên kết <i class="fas fa-chevron-down float-right"></i>
                                        </a>
                                    </h5>
                                </div>
                                <div id="collapse11" class="collapse bg-body" aria-labelledby="headingCategory" data-parent="#accordion">
                                    <div class="card-body">

                                        <fieldset class="form-group">
                                            <div class="form-check">
                                                <label class="form-check-label">Tên Menu </label>
                                                <input name="name" type="text">
                                                <label class="form-check-label">Liên Kết </label>
                                                <input name="link" type="text">
                                            </div>
                                        </fieldset>

                                        <fieldset class="form-group">
                                            <div class="form-check">
                                                <input class="btn-button-cart bg-cam p-2 w-25 float-right" type="submit" name="THEMCUSS" value="Thêm">
                                            </div>
                                        </fieldset>

                                    </div>

                                </div>
                            </div>


                        </div>
                    }
                </div>
                <div class="col-md-8 pt-3 ">
                    <div class="row">
                        <div class="col-md-12 card">
                            <div class="row justify-content-end">
                                <div class="col-md-6">
                                    <div class=" pt-1 ml-5 float-right mr-3 pb-2">
                                        <a class="text-white btn-sm btn-danger " href="~/admin/menu/trash">Thùng rác<i class="fas fa-trash"></i></a>
                                    </div>
                                </div>
                            </div>
                            <table id="myTable1" class="w-100 table table-striped table-bordered dt-responsive nowrap">
                                <thead>
                                    <tr>
                                        <th>Tên menu</th>
                                        <th>Liên kết</th>
                                        <th>Ngày Tạo</th>
                                        <th>Chức Năng</th>
                                        <th>ID</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        string lenLink = item.link;
                                        <tr>
                                            <td><a class="text-cam font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.name)</a></td>
                                            @if (lenLink.Length > 30)
                                            {

                                                <td>@lenLink.Substring(0, 30) ...</td>
                                            }
                                            else
                                            {
                                                <td> @Html.DisplayFor(modelItem => item.link)</td>
                                            }

                                            <td>@Html.DisplayFor(modelItem => item.created_at)</td>
                                            <td>
                                                @if (item.status == 1)
                                                {
                                                    <a class="btn btn-sm btn-light text-success border a33" href="@Url.Action("Status", "menu", new { id = item.ID })"> <i class="fas fa-toggle-on"></i> </a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-sm btn-light text-danger border a33" href="@Url.Action("Status", "menu", new { id = item.ID })"> <i class="fas fa-toggle-off"></i> </a>
                                                }
                                                <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("Deltrash", "menu", new { id = item.ID })"> <i class="fas fa-trash-alt"></i></a>
                                                <a class="btn btn-sm btn-light text-warning border" href="@Url.Action("Edit", "menu", new { id = item.ID })">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                            <td class="text-cam pt-4">@Html.DisplayFor(modelItem => item.ID)</td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        $("#menu").addClass("active");
    </script>
