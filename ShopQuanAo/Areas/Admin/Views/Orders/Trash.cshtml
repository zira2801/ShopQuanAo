@model IEnumerable<ShopQuanAo.Models.Morder>

@{
    /**/

    ViewBag.Title = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_topMenu.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_leftMenu.cshtml")
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row m-0">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Thùng Rác Đơn Hàng</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Thùng rác đơn hàng</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->


  
    <section class="container-fluid ">
        <div class=" bg-white card  ">
            <div class="row justify-content-end">
                <div class="col-md-3">
                    <div class=" pt-2 ml-5 float-right mr-3">
                        <a class="text-white btn-sm btn-danger " href="~/admin/orders">Thoát</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-9  w-100 ">
                    @Html.Partial("_MessgeAlert")
                </div>
                <div class="col-md-12 p-3">

                    <table id="myTable" class="table  table-striped table-bordered dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên khách hàng</th>
                                <th>Ngày Tạo</th>
                                <th>Trang thái</th>
                                <th>Chi tiết</th>
                                <th>Chức Năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                String dh1 = "Đã xác nhận";
                                String dh2 = "chờ xác nhận";
                                <tr>

                                    <td><a class="text-cam font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.ID)</a></td>
                                    <td> @Html.DisplayFor(modelItem => item.deliveryname)</td>
                                    <td width="10%">@Html.DisplayFor(modelItem => item.created_ate) </td>
                                    <td>
                                        @if (item.status == 1)
                                        {
                                            <p class="text-success"> @dh1</p>
                                        }
                                        else
                                        { <p class="text-danger"> @dh2</p>}
                                    </td>

                                    <td class="text-cam "><a href="#">Xem Chi tiết</a></td>
                                    <td>
                                        <a class="btn btn-sm btn-light text-dark border" href="@Url.Action("Retrash", "Orders", new { id = item.ID })"> <i class="fas fa-undo"></i></a>
                                        <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("deleteTrash", "Orders", new { id = item.ID })">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </section>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
    <script>
        $("#order").addClass("active");
    </script>
