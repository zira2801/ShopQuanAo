@model IEnumerable<ShopQuanAo.Models.Mcategory>

@{
    /**/

    ViewBag.Title = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_topMenu.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_leftMenu.cshtml")
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row m-0">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Quản Lý Loại Sản Phẩm</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Quản Lý Loại Sản Phẩm (category)</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <section class="container-fluid ">
        <div class=" bg-white card  ">
               
            <div class="row">
                <div class="col-md-9  w-100 ">
                    @Html.Partial("_MessgeAlert")
                </div>
                        <div class="col-md-3 ">
                            <div class=" pt-1 ml-5">
                                <a class="text-white btn-sm btn-success" href="~/admin/category/Create">Add Category <i class="fas fa-plus"></i></a>
                                <a class="text-white btn-sm btn-danger " href="~/admin/category/trash">Thùng rác<i class="fas fa-trash"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 p-3">

                            <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                                <thead>
                                    <tr>
                                        <th>Tên loại sản phẩm</th>
                                        <th>Parentid</th>
                                        <th>Ngày Tạo</th>
                                        <th>Chức Năng</th>
                                        <th>ID</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td><a class="text-cam font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.name)</a></td>

                                            <td> @Html.DisplayFor(modelItem => item.parentid)</td>



                                            <td style="font-size:15px;">@Html.DisplayFor(modelItem => item.created_at)</td>
                                            <td>
                                                @if (item.status == 1)
                                                {
                                                    <a class="btn btn-sm btn-light text-success border a33" href="@Url.Action("Status", "Category", new { id = item.ID })"> <i class="fas fa-toggle-on"></i> </a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-sm btn-light text-danger border a33" href="@Url.Action("Status", "Category", new { id = item.ID })"> <i class="fas fa-toggle-off"></i> </a>
                                                }

                                                <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("Deltrash", "Category", new { id = item.ID })"> <i class="fas fa-trash-alt"></i></a>
                                                <a class="btn btn-sm btn-light text-warning border" href="@Url.Action("Edit", "Category", new { id = item.ID })">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                            <td class="text-cam pt-4">@Html.DisplayFor(modelItem => item.ID)</td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
    </section>

    <script>
    $("#category").addClass("active");
    </script>

